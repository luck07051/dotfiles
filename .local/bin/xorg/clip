#!/bin/sh

if [ -n "$WAYLAND_DISPLAY" ]; then
	case "$1" in
		in|-i|--in|'') wl-copy ;;
		out|-o|--out)  wl-paste ;;
		sele|-s|-sele) wl-paste -p ;; # TODO: check the primary clipboard is selection
	esac
else
	case "$1" in
		in|-i|--in|'') xclip -i -selection clipboard ;;
		out|-o|--out)  xclip -o -selection clipboard ;;
		sele|-s|-sele) xclip -o ;;
	esac
fi
