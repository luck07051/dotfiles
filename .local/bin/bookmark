#!/bin/sh

bookmark_path="$HOME/bookmarks"

motion=$1
shift

case $motion in
    open)
        url=$(cat $bookmark_path | sed '/^\s*#/d;/^\s*$/d' | \
            sort -i | fzf --height 100% | awk '{print $NF}')
        xdg-open "$url"
        ;;

    add)
        echo $@ >> $bookmark_path
        ;;
esac


