sink="$(pactl info | grep "Default Sink:" | cut -d' ' -f3)"
option="$1"
shift 1

case $option in
    "set-volume")
        #pactl set-sink-volume "$sink" $1%
        pactl set-sink-volume @DEFAULT_SINK@ $1%
        $XDG_CONFIG_HOME/eww/bar/scripts/volume update-volume-vol
        ;;

    "sink-mute")
        pactl set-sink-mute @DEFAULT_SINK@ toggle
        $XDG_CONFIG_HOME/eww/bar/scripts/volume update-volume-vol
        ;;

    "source-mute")
        pactl set-source-mute @DEFAULT_SOURCE@ toggle
        ;;

    "next-sink")
        switch_default_sink
        $XDG_CONFIG_HOME/eww/bar/scripts/volume update-volume-icon
        ;;

esac


#$(echo $2 | cut -d'.' -f 1)

