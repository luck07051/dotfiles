#!/bin/sh

case $BLOCK_BUTTON in
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

case $(fcitx5-remote) in
	1) printf 'fcitx5 inactive' ;;
	2) ;;
	*) exit ;;
esac

input_method=$(fcitx5-remote -n)
case $input_method in
	keyboard-us) name=En ;;
	rime) name=Ch ;;
	mozc) name=Jp ;;
esac

printf 'Ôêã %s' "$name"
