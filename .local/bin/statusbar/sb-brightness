#!/bin/sh

val="$(bright get)"
max="$(bright max)"

case $BLOCK_BUTTON in
	3) notify-send 'Brightness' "$val / $max" ;;
	4) bright up;;
	5) bright down;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

case $(( val * 7 / max )) in
	0) printf '' ;;
	1) printf '' ;;
	2) printf '' ;;
	3) printf '' ;;
	4) printf '' ;;
	5) printf '' ;;
	6|7) printf '' ;;
esac
