#!/bin/sh

case $BLOCK_BUTTON in
#	1) vl sink_mute ;;
#	3) vl switch ;;
#	4) vl up ;;
#	5) vl down ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

