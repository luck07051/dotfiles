#!/bin/sh

case $BLOCK_BUTTON in
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

printf '%s %s' 'ï¡¸' \
	"$(uptime --pretty |
		sed -e 's/up //' \
			-e 's/\ years\?,\?/y/' \
			-e 's/\ weeks\?,\?/w/' \
			-e 's/\ days\?,\?/d/' \
			-e 's/\ hours\?,\?/h/' \
			-e 's/\ minutes\?/m/' \
			-e 's/^\(.*\)\ [0-9]*m/\1/' )"  # dont show 'minutes' if over a hours
