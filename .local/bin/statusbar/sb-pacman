#!/bin/sh

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -t "upgrade" -e sb-popupgrade ;;
	3) notify-send "$(/usr/bin/pacman -Qu | grep -Fv "[ignored]")" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

icon="ï’‡ "
num=$(pacman -Qu | grep -Fcv "[ignored]")

[ "$num" = "0" ] && exit
printf "%s%s" "$icon" "$num"
