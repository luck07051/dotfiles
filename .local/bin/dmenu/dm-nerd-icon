#!/bin/sh

dmenu="${DMENU:-dmenu -i}"
icon_file="$XDG_DATA_HOME/icons/nerd_icons"

selected="$($dmenu -p -l 20 "ICON" < "$icon_file" | cut -d' ' -f1)"

[ -z "$selected" ] && exit

if [ "$1" = "-a" ]; then
	xdotool type "$selected"
else
	printf "$selected" | xclip -selection clipboard
	notify-send "Icons" "'$selected' copied to clipboard."
fi
