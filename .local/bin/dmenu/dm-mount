#!/bin/sh

dmenu="${DMENU:-dmenu -i}"
dir="$HOME/usb"

# lsblk -nrpo "name,type,size,mountpoint"
selected=$(lsblk -nrpo 'type,mountpoint,name,size' | grep '^part  ' | cut -d' ' -f3,4 | column -t -o ' ' | $dmenu -p "MOUNT")
[ -z "$selected" ] && exit

# TODO
mount "$(echo "$selected" | cut -d' ' -f1)" "$dir"
