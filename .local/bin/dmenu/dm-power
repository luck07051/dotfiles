#!/bin/sh

# Menu of power options.

dmenu="${DMENU:-dmenu -i}"

list="$(cat <<EOF
lock;       slock
shut down;  doas poweroff
reboot;     doas reboot
log out;    loginctl terminate-session ${XDG_SESSION_ID-}
EOF
)"

selected=$(echo "$list" | cut -d';' -f1 | $dmenu -p "POWER")

[ -n "$selected" ] && $(echo "$list" | grep "^$selected;" | sed 's/.*;\s\+//')
