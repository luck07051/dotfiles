#!/bin/sh

case $(file --mime-type "$1" -bL) in

   video/* | audio/*)
      devour mpv "$@"
      ;;

   image/*)
      devour nsxiv "$@"
      ;;

   application/pdf | application/postscript)
      devour zathura "$@"
      ;;

   application/*wordprocessingml.document* )
      devour libreoffice "$@"
      ;;

  text/*)
      nvim "$@"
      ;;

   *)
     echo "File type not support!" 1>&2
     exit 1
     ;;
esac
