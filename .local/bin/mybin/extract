#!/bin/sh

if [ -z "$1" ]; then
  echo "Usage: ${0##*/} [FILE]..."
else
  for n in "$@"; do
    if [ -f "$n" ] ; then
      case "${n%,}" in
        *.tar)        tar xf "$n"     ;;
        *.tar.gz)     tar xzf "$n"    ;;
        *.tgz)        tar xzf "$n"    ;;
        *.tbz2)       tar xjf "$n"    ;;
        *.tar.bz2)    tar xjf "$n"    ;;
        *.bz2)        bunzip2 "$n"    ;;
        *.rar)        unrar x "$n"    ;;
        *.gz)         gunzip "$n"     ;;
        *.zip)        unzip "$n"      ;;
        *.Z)          uncompress "$n" ;;
        *.7z)         7z x "$n"       ;;
        *.xz)         nuxz "$n"       ;;
        *)            echo "'$n' - Unsupported file type." ;;
      esac
    else
      echo "'$n' - File does not exist"
      return 1
    fi
  done
fi
