#!/bin/sh

set -o errexit

dir="${XDG_PICTURES_DIR:-$HOME/downloads}/screenshots"
[ ! -d "$dir" ] && mkdir -p "$dir"
filename='screenshot_%Y-%m-%d_%H-%M-%S.png'

case "$1" in
	sel)
		scrot -s "$dir/$filename" -e 'xclip -selection clipboard -target image/png < $f'
		;;
	cur)
		scrot -u "$dir/$filename" -e 'xclip -selection clipboard -target image/png < $f'
		;;
	full)
		scrot "$dir/$filename" -e 'xclip -selection clipboard -target image/png < $f'
		;;
esac

notify-send "Screenshot taked" ""
