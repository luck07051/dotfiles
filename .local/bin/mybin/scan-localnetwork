#!/bin/sh

IP=$(ip route | grep default | awk '{print $3}' | cut -d. -f1,2,3)

for j in $(seq 0 16 255); do
	for i in $(seq 0 15); do
		if ping -c1 -w2 "$IP.$((i+j))" >/dev/null 2>&1; then
			echo "$IP.$((i+j))"
		fi &
	done
	wait
done

