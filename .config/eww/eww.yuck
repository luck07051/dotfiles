

(defwidget workspaces []
  (literal :content workspace))
(deflisten workspace "scripts/workspace")


(defwindow workspaces
  :monitor 0
  :geometry
  (geometry
    :x "8px"
    :y "8px"
    :width "10%"
    :height "30px"
    :anchor "top left")
  :stacking "fg"
  :wm-ignore false
  :reserve (struts :distance "38px" :side "top")
  :windowtype "dock"
  (workspaces))


