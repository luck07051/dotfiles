
#====================BASIC====================#
# Restart WM and sxhkd
super + ctrl + r
    i3-msg restart && killall sxhkd && sxhkd -c $HOME/.config/i3/sxhkdrc

# Quit WM
super + ctrl +q
    prompt 'Do you want to Logout?' 'i3-msg exit'

# Kill focused window
super + q
    i3-msg kill


#====================OPEN====================#
#===Essential===#
# Open terminal
super + Return
    $TERMINAL -e tmux

# Open browser
super + b
    $BROWSER

# Open launcher
super + semicolon
    rofi -show combi -i -theme ui_theme

super + i
    i3-terminal launcher 60 20 sway-launcher-desktop

# Open power menu
super + p
    rofi -show power -modi power:power-menu -theme ui_theme

#===Scratchpad===#
# Open taskwarrior-tui as scratchpad
# exec 'task sync' when press super+t everytime
super + t
    i3run-terminal Taskwarrior 130 35 "taskwarrior-tui | task sync"

# Open audio control
super + a
    i3run-terminal ncpamixer 130 35 "ncpamixer"

#===Special Workspace===#
# vimwiki
super + w
    i3-switch-sp -s -a 9 "$TERMINAL \
        --title Vimwiki -e tmuxinator start vimwiki"

#===Extra===#
# Open bitwarden-rofi menu
super + shift +b
    bwmenu

# Bookmark
super + o
    $TERMINAL --class 'floating' --title 'bookmark' \
    -o window.opacity=0.90 \
    -e bookmark open

# Open class sheet
super + shift + c
    sxiv ~/pictures/class_sheet.jpg


#====================WORKSPACES & LAYOUT & WINDOWS====================#
# Move focus
super + {h, j, k, l}
    i3-msg focus {left, down, up, right}

# Move focused window
super + shift + {h, j, k, l}
    i3-msg move {left, down, up, right}

# Resize focused window
super + ctrl + {h, j, k, l}
    i3-msg resize {shrink width, grow height, shrink height, grow width} 30

# Switch to workspace
super + {1-9}
    i3-switch-sp {1-9}

# Move focused container to workspace
super + shift + {1-9}
    i3-msg move container to workspace {1-9}

# Switch focus between monitor
super + m
    i3-switch-monitor

## Move workspace to other monitor
#super + shift + m
#    i3-msg move workspace to output next


#=== ===#
# Toggle tiling / floating
super + f
    i3-msg floating toggle

# Change focus between tiling / floating windows
super + space
    i3-msg focus mode_toggle

# split in {horizontal, vertical} orientation
super + {x, v}
    i3-msg split {h, v}

# Enter fullscreen mode
super + shift + f
    i3-msg fullscreen toggle


#====================AUDIO====================#
# {Raise, Low} volume
super + shift + {u, i}
    pactl set-sink-volume @DEFAULT_SINK@ {+5%, -5%}

{XF86AudioRaiseVolume, XF86AudioLowerVolume}
    pactl set-sink-volume @DEFAULT_SINK@ {+5%, -5%}

# switch output
super + shift + o
    switch_default_sink

# Mute output
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle
# Mute source
XF86AudioMicMute
    pactl set-source-mute @DEFAULT_SOURCE@ toggle

