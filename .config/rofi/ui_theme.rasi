/*
 * Modify from Nord
 */

configuration {
  font: "JetBrainsMono Nerd Font Medium 10";

  drun {
    display-name: " ";
  }

  run {
    display-name: "";
  }

  window {
    display-name: "";
  }

  combi {
    display-name: "";
  }

  timeout {
    delay: 10;
    action: "kb-cancel";
  }
}

* {
  border: 0;
  margin: 0;
  padding: 0;
  spacing: 0;

  bg: #1d1f21;
  bg-alt: #555555;
  fg: #c5c8c6;
  fg-alt: #f5bad0;

  background-color: @bg;
  text-color: @fg;
}

window {
  transparency: "real";
}

mainbox {
  children: [inputbar, listview];
}

inputbar {
  background-color: @bg-alt;
  children: [prompt, entry];
}

entry {
  background-color: inherit;
  padding: 12px 3px;
}

prompt {
  background-color: inherit;
  padding: 12px;
}

listview {
  lines: 10;
}

element {
  children: [element-icon, element-text];
}

element-icon {
  padding: 10px 10px;
}


element-text {
  padding: 10px 0;
}

element-text selected {
  text-color: @fg-alt;
}
