#====================Account====================#
folder-hook 'account1' 'source $XDG_CONFIG_HOME/mutt/account1'
folder-hook 'account2' 'source $XDG_CONFIG_HOME/mutt/account2'

# Default account
source "$XDG_CONFIG_HOME/mutt/account1"

# Macros for switching accounts
macro index <f1> '<sync-mailbox><enter-command>source $XDG_CONFIG_HOME/mutt/account1<enter><change-folder>!<enter>'
macro index <f2> '<sync-mailbox><enter-command>source $XDG_CONFIG_HOME/mutt/account2<enter><change-folder>!<enter>'

set spoolfile = "+INBOX"
set record = "+Sent"
set trash = "+Trash"
set postponed = "Drafts"

mailboxes =INBOX =Sent =Trash =Drafts

source color.muttrc
