
#====================BASIC====================#
# Restart WM and sxhkd
super + ctrl + r
    i3-msg restart && killall sxhkd && sxhkd -c $HOME/.config/i3/sxhkdrc

# Quit WM
super + ctrl +q
    prompt 'Do you want to Logout?' 'i3-msg exit'

# Kill focused window
super + q
    i3-msg kill


#====================OPEN====================#
# Open terminal
super + Return
    $TERMINAL

# Open power menu
super + p
    rofi -show power -modi power:power-menu -theme ui_theme

# Open launcher
super + semicolon
    rofi -show combi -i -theme ui_theme

# Open browser
super + b
    $BROWSER

# Open bitwarden-rodi menu
super + shift +b
    bwmenu

# Open taskwarrior-tui
# exec 'task sync' when press super+t everytime
super + t
    i3run --title 'taskwarrior' -- \
    $TERMINAL --class 'scratchpad' -t 'taskwarrior' \
    -o window.dimensions.columns=140 -o window.dimensions.lines=40 \
    -o window.opacity=0.90 \
    -e taskwarrior-tui | task sync

# Open vimwiki
super + w
    i3run --title 'vimwiki' -- \
    $TERMINAL --class 'scratchpad' -t 'vimwiki' \
    -o window.dimensions.columns=140 -o window.dimensions.lines=40 \
    -o window.opacity=0.90 \
    -e nvim ~/vimwiki/index.md

# Open class sheet
super + shift + c
    sxiv ~/pictures/class_sheet.jpg


#====================WORKSPACES & LAYOUT & WINDOWS====================#
# Move focus
super + {h, j, k, l}
    i3-msg focus {left, down, up, right}

# Move focused window
super + shift + {h, j, k, l}
    i3-msg move {left, down, up, right}

# Resize focused window
super + ctrl + {h, j, k, l}
    i3-msg resize {shrink width, grow height, shrink height, grow width} 30

# Toggle tiling / floating
super + f
    i3-msg floating toggle

# Change focus between tiling / floating windows
super + space
    i3-msg focus mode_toggle

# Enter fullscreen mode
super + shift + f
    i3-msg fullscreen toggle

# split in {horizontal, vertical} orientation
super + {c, v}
    i3-msg split {h, v}

# Switch to workspace
super + {1-9}
    i3-msg workspace {1-9}
    #i3-wk-switch {1-9}

# Move focused container to workspace
super + shift + {1-9}
    i3-msg move container to workspace {1-9}


#====================AUDIO====================#
# {Raise, Low} volume
super + shift + {u, i}
    pactl set-sink-volume @DEFAULT_SINK@ {+5%, -5%}

{XF86AudioRaiseVolume, XF86AudioLowerVolume}
    pactl set-sink-volume @DEFAULT_SINK@ {+5%, -5%}

# switch output
super + shift + o
    switch_default_sink

# Mute output
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle
# Mute source
XF86AudioMicMute
    pactl set-source-mute @DEFAULT_SOURCE@ toggle

