
#====================BASIC====================#
# Restart WM and sxhkd
super + ctrl + r
    bspc wm -r && killall sxhkd && sxhkd -c $HOME/.config/bspwm/sxhkdrc

# Quit WM
super + ctrl +q
    prompt 'Do you want to Logout?' 'bspc quit'

# Kill focused window
super + q
    bspc node -c


#====================OPEN====================#
#===Essential===#
# Open terminal
super + Return
    $TERMINAL -e tmux

# Open browser
super + b
    $BROWSER

# Open launcher
super + semicolon
    rofi -show combi -i -theme ui_theme

# Open power menu
super + p
    rofi -show power -modi power:power-menu -theme ui_theme

