#!/bin/sh

run() {
	if [ -x "$(which "$1")" ] && ! pidof -q "$1"
	then
		"$@" &
	fi
}

case $(cat /etc/hostname) in
uicom)
	# Remap caps lock to Ctrl
	setxkbmap -option ctrl:nocaps
	# Set screen to 144 rate
	xrandr --output HDMI-0 --mode 1920x1080 --rate 144.00
	# Input method
	run fcitx5 -d
	# Tablet driver
	run otd
	;;
uilap)
	#setxkbmap -option caps:shiftlock
	setxkbmap -option ctrl:nocaps
	# pipewire
	pipewire &
	pipewire-pulse &
	pipewire-media-session &
	;;
esac


# No screen saver
xset s off
xset -dpms

xrdb -load "$XDG_CONFIG_HOME"/X11/xresources
setwallpaper

# Startup app
run dunst
run xcompmgr -n
run unclutter

run syncthing serve --no-browser --no-default-folder
# run entr-list

while true; do
	killall dwmblocks >/dev/null 2>&1
	dwmblocks &
	(sleep 3s; kill -55 "$(pidof dwmblocks)") &

	dwm
done
