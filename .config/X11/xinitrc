#!/bin/sh

run() {
	if type "$1" >/dev/null && ! pidof -q "$1"; then
		"$@" &
	fi
}

case $(cat /etc/hostname) in
uicom)
	# Set screen to 144 rate
	xrandr --output HDMI-0 --mode 1920x1080 --rate 144.00
	# Tablet driver
	run otd
	;;
uilap)
	;;
esac

# Remap caps lock to Ctrl
setxkbmap -option ctrl:nocaps
# Input method
run fcitx5 -d

# No screen saver
xset s off
xset -dpms

# x11
xrdb -load "$XDG_CONFIG_HOME"/X11/xresources
setwallpaper
run xcompmgr -n
run unclutter

# start audio
setsid -f start-pipewire

# Startup app
run syncthing serve --no-browser --no-default-folder
run entr-list

while true; do
	killall dwmblocks >/dev/null 2>&1
	dwmblocks &
	dwm
done
